---
interface Props {
  title: string;
  description: string;
  features: string[];
  icon: string;
  color: string;
  reversed?: boolean;
}

const { title, description, features, icon, color, reversed = false } = Astro.props;
---

<div class:list={['flex flex-col gap-8 lg:gap-12 py-12 lg:py-16', reversed ? 'lg:flex-row-reverse' : 'lg:flex-row']}>
  <!-- Text content -->
  <div class="flex-1">
    <div class:list={['inline-flex items-center justify-center w-14 h-14 rounded-xl mb-6', `bg-gradient-to-br ${color}`]}>
      <Fragment set:html={icon} />
    </div>
    <h3 class="text-2xl sm:text-3xl font-bold text-white mb-4">{title}</h3>
    <p class="text-gray-400 leading-relaxed mb-6">{description}</p>
    <ul class="space-y-3">
      {
        features.map((feat) => (
          <li class="flex items-start gap-3 text-sm text-gray-300">
            <svg class="w-5 h-5 text-primary-light shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" /></svg>
            {feat}
          </li>
        ))
      }
    </ul>
    <div class="mt-8">
      <a
        href="/contact"
        class="inline-flex items-center gap-2 bg-cta hover:bg-cta-dark text-gray-900 font-semibold rounded-xl px-6 py-3 text-sm transition-all hover:shadow-lg hover:shadow-cta/25"
      >
        Nous contacter
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg>
      </a>
    </div>
  </div>

  <!-- Visual placeholder -->
  <div class="flex-1 flex items-center justify-center">
    <div class="w-full bg-surface-light/50 border border-white/5 rounded-2xl p-6 sm:p-8 min-h-[240px] flex items-center justify-center">
      <div class="text-center">
        <div class:list={['inline-flex items-center justify-center w-16 h-16 rounded-2xl mb-4', `bg-gradient-to-br ${color}`]}>
          <Fragment set:html={icon} />
        </div>
        <p class="text-sm text-gray-500">Aperçu à venir</p>
      </div>
    </div>
  </div>
</div>
