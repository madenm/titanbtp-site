<section class="py-20 lg:py-28 bg-surface-light/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-white">
        Les artisans nous <span class="text-primary-light">font confiance</span>
      </h2>
    </div>

    <!-- Metrics -->
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-6 mb-16">
      <div class="text-center p-6 bg-surface-light/50 border border-white/5 rounded-2xl">
        <p class="text-3xl sm:text-4xl font-extrabold text-white">500+</p>
        <p class="mt-2 text-sm text-gray-400">Devis générés</p>
      </div>
      <div class="text-center p-6 bg-surface-light/50 border border-white/5 rounded-2xl">
        <p class="text-3xl sm:text-4xl font-extrabold text-primary-light">2M €</p>
        <p class="mt-2 text-sm text-gray-400">De chantiers estimés</p>
      </div>
      <div class="text-center p-6 bg-surface-light/50 border border-white/5 rounded-2xl">
        <p class="text-3xl sm:text-4xl font-extrabold text-cta">2h</p>
        <p class="mt-2 text-sm text-gray-400">Gagnées par devis</p>
      </div>
      <div class="text-center p-6 bg-surface-light/50 border border-white/5 rounded-2xl">
        <p class="text-3xl sm:text-4xl font-extrabold text-accent">12</p>
        <p class="mt-2 text-sm text-gray-400">Types de projets BTP</p>
      </div>
    </div>

    <!-- Testimonial placeholders -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      {
        [
          { name: 'Marc D.', role: 'Plombier à Lyon', quote: 'Depuis que j\'utilise TitanBTP, je fais mes devis 3 fois plus vite. L\'estimation IA m\'a bluffé dès le premier chantier.' },
          { name: 'Sophie L.', role: 'Gérante, entreprise de peinture', quote: 'Le CRM m\'a permis de ne plus oublier de relances. J\'ai récupéré deux chantiers que j\'aurais perdus sinon.' },
          { name: 'Karim B.', role: 'Maçon indépendant', quote: 'Je gérais tout sur papier avant. Maintenant je fais tout depuis mon téléphone, même sur le chantier.' },
        ].map((t) => (
          <div class="bg-surface-light/50 border border-white/5 rounded-2xl p-6">
            <div class="flex items-center gap-1 mb-4">
              {[1, 2, 3, 4, 5].map(() => (
                <svg class="w-4 h-4 text-accent" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" /></svg>
              ))}
            </div>
            <p class="text-gray-300 text-sm leading-relaxed mb-4 italic">"{t.quote}"</p>
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-primary/20 flex items-center justify-center text-primary-light font-semibold text-sm">
                {t.name.charAt(0)}
              </div>
              <div>
                <p class="text-sm font-semibold text-white">{t.name}</p>
                <p class="text-xs text-gray-500">{t.role}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
